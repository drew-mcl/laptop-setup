Host *
  AddKeysToAgent yes
  UseKeychain yes
  ForwardAgent no
  ServerAliveInterval 60
  ServerAliveCountMax 3
  PreferredAuthentications publickey
  IdentitiesOnly yes
  IdentityFile ~/.ssh/id_ed25519
  GSSAPIAuthentication no

# Allow drop-in configs
Include ~/.ssh/config.d/*

# GitHub
Host github.com
  HostName github.com
  User git
  IdentitiesOnly yes

